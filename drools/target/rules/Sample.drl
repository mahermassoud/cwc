rule "Pathway: Angiotensin II mediated activation of JNK Pathway via Pyk2 dependent signaling"
	agenda-group "Pathway discovery" 
	when
		epidermalGrowthFactorGeneInput : GeneListInputAgent();
		myocyteEnhancer2CGeneInput : GeneListInputAgent();
		calmodulin1GeneInput : GeneListInputAgent();
			
		eval( 	inputIsRelevant(epidermalGrowthFactorGeneInput, GeneListInputAgent.GENE_EPIDERMAL_GROWTH_FACTOR_RECEPTOR) &&
				inputIsRelevant(myocyteEnhancer2CGeneInput, GeneListInputAgent.GENE_MYOCYTE_ENHANCER_2C) &&
				inputIsRelevant(calmodulin1GeneInput, GeneListInputAgent.GENE_CALMODULIN_1))
	then
		System.out.println("!!!!!! Inputs " + epidermalGrowthFactorGeneInput.getFileName() + ", " + myocyteEnhancer2CGeneInput.getFileName() + ", " +
		calmodulin1GeneInput.getFileName() + "is relevant to Angiotensin activation of JNK via Pyk2 pathway!!!!!!");
end
